{
  "name": "docforge",
  "version": "0.1.0",
  "description": "LLM 驱动的文档生成 CLI 工具",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "docforge": "./bin/docforge.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "watch": "tsc --watch",
    "start": "node bin/docforge.js",
    "tui": "node bin/docforge.js",
    "dev": "ts-node bin/docforge.js",
    "cli": "ts-node src/cli.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "llm",
    "document",
    "generator",
    "cli",
    "docx",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@opentui/solid": "^0.1.75",
    "blessed": "^0.1.81",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "docx": "^8.5.0",
    "figlet": "^1.7.0",
    "mammoth": "^1.11.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
